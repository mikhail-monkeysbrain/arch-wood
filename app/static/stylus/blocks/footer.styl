@import '../core/variables.styl';

.footer
  width 100%
  height: $heightFooter
  background $black

  &--logo
    width 221px

  &__top,
  &__bottom
    width 100%
    max-width 1360px
    margin 0 auto
    display flex
    justify-content space-between
    transform: translateX(-31px)
  
  &__top
    padding-top 80px
    align-items flex-start
  
  &__bottom
    align-items center
    padding-top 6px

  &--address
    flex-shrink: 0
    transform translate(-5px, -9px)

  &--inline,
  &--inline a
    color $gray-a0
    font-size: 14px
    line-height 29px

  &--inline a
    transition: $fast

    &:hover
      color $white
    
  &--time
    flex-shrink: 0
    transform translate(22px, -10px)
    &__heading
      font-size: 12px
      letter-spacing 2.4px

  &--social
    display flex
    flex-wrap: wrap
    width 180px
    transform: translate(30px, 0px)

    &__item
      margin-bottom 30px

    &__facebook
      sprite($s_facebook)
      margin-right 58px

    &__vk
      sprite($s_vk)
      margin-right 58px

    &__instagram
      sprite($s_instagram)
      
    &__pinterest
      sprite($s_pinterest)
      margin-right 58px
      transform translate(-3px, -1px)

    &__youtube
      sprite($s_youtube)
      margin-right 58px
      transform translate(-3px, -1px)

  &--copy,
  &--politic,
  &--developer
    flex-shrink: 0

  &--copy,
  &--politic
    color $gray-a0
    font-size 12px
    line-height 34px

  &--politic
    transform: translate(184px)

  &--developer
    display flex
    align-items flex-start
    justify-content space-between
    width 158px
    transform: translate(-58px, -8px)
    
    &--img
      width 78px
      height 52px
    
    p
      color $gray-71
      font-size 12px

  .btn
    transform: translate(2px, -5px)